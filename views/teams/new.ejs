<%- include('../partials/header') %>

  <body>
    <h1>
      <%= title %>
    </h1>
    <br>
    <br>
    <br>

    <form id="add-team-nav" method="POST" action="/teams/<%= user._id %>/">
      <label>Team Name:</label>
      <input name="name">
      <br>
      <br>


      <label>Player 1:</label>
      <div class="dropdown show">
        <a class="btn btn-primary dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">
          Select a Team
        </a>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <% teams.data.forEach(function(t) { %>
            <a class="dropdown-item" href="/teams/new/<%= t.id %>">
              <%=t.full_name %>
            </a>
            <% }); %>
        </div>
      </div>

      <% if (playerSelect) { %>
      <div class="dropdown show">
        <a class="btn btn-primary dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">
          Select a Player
        </a>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <% players.forEach(function(p) { %>
            <a class="dropdown-item" href="/teams/new/<%= p.team_id %>/<%= p.id%>">
              <%=p.first_name %> <%=p.last_name %>
            </a>
            <% }); %>
        </div>
      </div>
    <% } %>
      <br>



      <button type="button" class="btn btn-secondary">Finalize Team</button>
    </form>



    <%- include('../partials/footer') %>